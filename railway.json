{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "nixpacks.toml"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "sleepApplication": false,
      "multiRegionConfig": {
        "us-east4-eqdc4a": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10,
      "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}"
    }
  }